<!-- ./views/show.handlebars -->
<div class="container py-5">
  <div class="text-center">
    <h1 class="mb-4">{{restaurantDetail.name}}</h1>
    <h2>{{restaurantDetail.name_en}}</h2>
    <img
      class="rounded mb-4"
      src="{{restaurantDetail.image}}"
      alt="Card image cap"
      style="max-height: 300px;"
    />
  </div>
  <div class="row">
    <div class="col-12 col-md-10 col-lg-8 mx-auto">

      <p>
        <i class="fa-solid fa-utensils"></i>
        <strong>餐廳簡介:</strong>
        {{restaurantDetail.description}}
      </p>

      <p>
        <i class="fa-solid fa-phone"></i>
        <strong>餐廳電話:</strong>
        {{restaurantDetail.phone}}
      </p>

      <p>
        <a href="{{restaurantDetail.google_map}}"><i class="fa-solid fa-location-dot"></i></a> 
        <strong>餐廳地址:</strong>
        {{restaurantDetail.location}}
      </p>
    </div>
  </div>
</div>